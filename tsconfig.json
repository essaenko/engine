{
  "compilerOptions": {
    "jsx": "react",
    "declaration": true,
    "declarationDir": "types",
    "lib": [
      "es2015",
      "es2017",
      "es2016",
      "es5",
      "es6",
      "dom"
    ],
    "resolveJsonModule": true,
    "target": "es5",
    "baseUrl": ".",
    // "outFile": "./dist/index.js",
    "paths": {
      "core/*": [
        "src/core/*"
      ],
      "game/*": [
        "src/game/*"
      ],
      "js/*": [
        "src/js/*"
      ]
    }
  }
}